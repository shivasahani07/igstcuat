public without sharing class IGSTCSupportCaseController {

    @RemoteAction
    public static String createCase(
        String name,
        String email,
        String comment,
        String proposalId
    ) {
        // Validation
        if (String.isBlank(name) || String.isBlank(email) || String.isBlank(comment)) {
            return 'ERROR: Please fill all mandatory fields.';
        }

        Case c = new Case();
        c.SuppliedName  = name;
        c.SuppliedEmail = email;
        c.Subject       = 'IGSTC Support Request';
        c.Origin        = 'Web';
        c.Comments__c   = comment;

        if (!String.isBlank(proposalId)) {
            c.Application__c = proposalId;
        }

        insert c;
        return 'SUCCESS';
    }
}